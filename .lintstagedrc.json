{
  "*.{ts,tsx,js,jsx}": [
    "eslint --fix --max-warnings 0",
    "prettier --write"
  ],
  "*.{css,scss,less}": [
    "prettier --write"
  ],
  "*.{json,md,yaml,yml}": [
    "prettier --write"
  ],
  "design-tokens/**/*.yaml": [
    "npm run build:tokens",
    "npm run validate-tokens",
    "git add generated/"
  ],
  "app/**/*.{ts,tsx,js,jsx}": [
    "npm run lint:tokens"
  ],
  "components/**/*.{ts,tsx,js,jsx}": [
    "npm run lint:tokens"
  ]
}