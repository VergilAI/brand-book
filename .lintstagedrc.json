{
  "*.{ts,tsx}": [
    "eslint --fix --rule '@vergil/tokens/no-hardcoded-colors: error' --rule '@vergil/tokens/no-hardcoded-spacing: error' --rule '@vergil/tokens/no-arbitrary-tailwind: error'",
    "prettier --write"
  ],
  "*.{js,jsx}": [
    "eslint --fix",
    "prettier --write"
  ],
  "*.{css,scss,less}": [
    "prettier --write"
  ],
  "*.{json,md,yaml,yml}": [
    "prettier --write"
  ],
  "design-tokens/**/*.yaml": [
    "npm run build:tokens",
    "git add generated/"
  ]
}